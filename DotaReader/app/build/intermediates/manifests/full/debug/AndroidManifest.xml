<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="danski.dotareader"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.samsung.android.providers.context.permission.WRITE_USE_APP_FEATURE_SURVEY" />

    <meta-data
        android:name="com.samsung.android.sdk.multiwindow.enable"
        android:value="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cobaltlogo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="danski.dotareader.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="danski.dotareader.HeroList"
            android:label="@string/title_activity_hero_list"
            android:parentActivityName="danski.dotareader.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="danski.dotareader.MainActivity" />
        </activity>
        <activity
            android:name="danski.dotareader.Preferences"
            android:label="@string/title_activity_preferences"
            android:parentActivityName="danski.dotareader.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="danski.dotareader.MainActivity" />
        </activity>
        <activity
            android:name="danski.dotareader.MatchHistoryActivity"
            android:label="@string/title_activity_match_history"
            android:parentActivityName="danski.dotareader.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="danski.dotareader.MainActivity" />
        </activity>
        <activity
            android:name="danski.dotareader.TabbedMatchActivity"
            android:label="@string/title_activity_tabbed_match" >
        </activity>
        <activity
            android:name="danski.dotareader.SetupWizard"
            android:label="@string/title_activity_setup_wizard"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="danski.dotareader.TabbedStatsActivity"
            android:label="@string/title_activity_tabbed_stats"
            android:parentActivityName="danski.dotareader.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="danski.dotareader.MainActivity" />
        </activity>
        <activity
            android:name="android.support.v7.widget.TestActivity"
            android:label="RecyclerViewTestActivity" />
    </application>

</manifest>