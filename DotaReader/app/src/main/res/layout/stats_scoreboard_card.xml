<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scoreboardcardview">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >
            <ImageView
                android:id="@+id/hero_img"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/luna_full"
                android:layout_width="125dp"
                android:layout_height="75dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/statdefinition"
                android:textSize="16sp"
                android:text="Most Kills"
                android:layout_toRightOf="@+id/hero_img"
                android:layout_alignParentTop="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/actualstat"
                android:layout_below="@+id/statdefinition"
                android:layout_alignLeft="@+id/statdefinition"
                android:layout_alignStart="@+id/statdefinition"
                android:textSize="30dp"
                android:text="36" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/statdetail"
                android:layout_toRightOf="@+id/hero_img"
                android:layout_below="@+id/actualstat"
                android:textSize="14sp"
                android:text="Luna, 22-05-2015"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>