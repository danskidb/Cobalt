<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="danski.cobalt" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.samsung.android.providers.context.permission.WRITE_USE_APP_FEATURE_SURVEY" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo2"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="danski.cobalt.MainActivity_v2"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="danski.cobalt.MatchActivity.TabbedMatchActivity"
            android:label="@string/title_activity_tabbed_match" >
        </activity>
        <activity
            android:name="danski.cobalt.MatchHistoryActivity"
            android:label="Matches"
            android:parentActivityName="danski.cobalt.MainActivity_v2" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="danski.cobalt.MainActivity_v2" />
        </activity>
        <activity
            android:name="danski.cobalt.SetupWizard"
            android:label="@string/title_activity_setup_wizard"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="danski.cobalt.StatsActivity.TabbedStatsActivity"
            android:label="Statistics"
            android:parentActivityName="danski.cobalt.MainActivity_v2" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="danski.cobalt.MainActivity_v2" />
        </activity>
        <activity
            android:name="danski.cobalt.PreferencesActivity.PreferencesActivity"
            android:label="Settings"
            android:parentActivityName="danski.cobalt.MainActivity_v2" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="danski.cobalt.MainActivity_v2" />
        </activity>
        <activity
            android:name="danski.cobalt.PreferencesActivity.LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
                <category android:name="android.intent.category.BROWSABLE"></category>
                <data android:scheme="cobaltlogin"></data>
            </intent-filter>
        </activity>
    </application>

</manifest>
