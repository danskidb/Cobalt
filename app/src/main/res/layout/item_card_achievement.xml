<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/RelativeAchievementLayout">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/card_achievement_heroImg"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/templar_assassin_full"
            android:scaleType="centerCrop"
            android:layout_alignParentBottom="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/card_achievement_overlay"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/heroImg"
            android:layout_alignEnd="@+id/heroImg"
            android:src="@drawable/gradient_blue"
            android:background="#64000000" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RelativeAchievementLayout"
        android:padding="16dp">

        <TextView
            android:text="Most Kills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_achievement_text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:id="@+id/card_achievement_heroimg"
            android:src="@drawable/templar_assassin_full"
            android:layout_below="@+id/card_achievement_text"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:text="El Danski"
            android:layout_marginLeft="12dp"
            android:id="@+id/card_achievement_playername"
            android:layout_alignTop="@+id/card_achievement_heroimg"
            android:layout_toEndOf="@+id/card_achievement_heroimg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="as Templar Assassin"
            android:layout_marginLeft="12dp"
            android:id="@+id/card_achievement_ashero"
            android:textColor="#ffffff"
            android:layout_below="@+id/card_achievement_playername"
            android:layout_toEndOf="@+id/card_achievement_heroimg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="000"
            android:id="@+id/card_achievement_record"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:textStyle="bold"

            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</RelativeLayout>