<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/RelativeAchievementLayout">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/card_item_itemImg"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/vanguard_lg"
            android:scaleType="centerCrop"
            android:layout_alignParentBottom="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/card_item_overlay"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/heroImg"
            android:layout_alignEnd="@+id/heroImg"
            android:src="@drawable/gradient_blue"
            android:background="#64000000" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/RelativeAchievementLayout"
        android:padding="16dp"
        android:layout_height="96dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:id="@+id/card_hero_heroimg"
            android:src="@drawable/vanguard_lg"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" />

        <TextView
            android:text="Eul's Scepter of Divinity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_hero_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/card_hero_heroimg"
            android:paddingLeft="16dp" />

    </RelativeLayout>
</RelativeLayout>